{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":dependencyDashboard"
    ],
    "pinDigests": false,
    "flux": {
        "fileMatch": [
            "clusters/.+\\.yaml$",
            "infrastructure/.+\\.yaml$",
            "apps/.+\\.yaml$"
        ]
    },
    "helm-values": {
        "fileMatch": [
            "apps/.+/values.yaml$",
            "infrastructure/.+/values.yaml$"
        ]
    },
    "packageRules": [
        {
            "description": "Disable digest pinning for all container images and helm charts",
            "matchDatasources": [
                "docker",
                "helm"
            ],
            "pinDigests": false
        },
        {
            "description": "Auto-merge all minor and patch updates",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "platformAutomerge": true
        }
    ]
}