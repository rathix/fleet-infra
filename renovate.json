{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard"
    ],
    "pinDigests": false,
    "flux": {
        "managerFilePatterns": [
            "/clusters/.+\\.yaml$/",
            "/infrastructure/.+\\.yaml$/",
            "/apps/.+\\.yaml$/"
        ]
    },
    "kubernetes": {
        "fileMatch": [
            "apps/.+\\.yaml$",
            "infrastructure/.+\\.yaml$"
        ]
    },
    "helm-values": {
        "managerFilePatterns": [
            "/apps/.+/values.yaml$/",
            "/infrastructure/.+/values.yaml$/"
        ]
    },
    "packageRules": [
        {
            "description": "Disable digest pinning for all container images and helm charts",
            "matchDatasources": [
                "docker",
                "helm"
            ],
            "pinDigests": false
        },
        {
            "description": "Auto-merge all minor and patch updates",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "platformAutomerge": true
        }
    ]
}